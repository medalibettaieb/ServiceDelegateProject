	<persistence-unit name="PU">
		<jta-data-source>java:/myDS</jta-data-source>
		<class>edu.app.persistence.Employee</class>
		<class>edu.app.persistence.Admin</class>
		<class>edu.app.persistence.Category</class>
		<class>edu.app.persistence.Product</class>
		<class>edu.app.persistence.User</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="create"/>
